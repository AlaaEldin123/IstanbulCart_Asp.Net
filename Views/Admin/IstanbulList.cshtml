@model List<BusAPP.AddClasses.IstanbulCard>
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> Istanbul Tables List</h4>
                </div>
                <div class="card-content">
                    <!-- Table with no outer spacing -->
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>Customer Type</th>
                                    <th>Customer Name</th>
                                    <th>Customer ID</th>
                                    <th>Card ID</th>
                                    <th>Balance</th>

                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var ist in Model)
                                {
                    <tr>
                        <td>@ist.CustomerType</td>
                        <td>@ist.CustomerName</td>
                        <td>@ist.CustomerId</td>
                        <td>@ist.CardId</td>
                        <td>@ist.Balance</td>
                    </tr>
                                  }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
